@model deepp.landing.Models.ForgotPassViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h2 class="page-title">Forgot Password</h2>
            </div> <!-- /.col-md-6 -->
            @*<div class="col-md-6 col-sm-6 hidden-xs back-home">
                @Html.ActionLink("← Go back Home", "Index", "Home", new { }, null)
            </div>*@ 
        </div> <!-- /.row -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box-content">
                <h3 class="widget-title">Step - 3 of 3</h3>
                <div class="clearfix">
                    @using (Html.BeginForm("ForgotPassReset", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
               {
                    <div id="mc_subheader">
                        <p>Please confirm your name and create new password</p>
                    </div><!-- /mc_subheader -->
                    <div class="contactForm">
                        <div class="mc_merge_var">
                            <label>Confirm your name</label>
                            <p>
                                @Html.DropDownListFor(m => m.UserInfoId, Model.UserRegisterInfoOnMobileNo.Select(x =>
                               new SelectListItem
                               {
                                   Value = x.UserInfoId.ToString()
                                   ,
                                   Text = x.Name
                               }))
                            </p>

                            @*@foreach (var row in Model.UserRegisterInfoOnMobileNo)
                                {

                                    <p>
                                        @Html.RadioButtonFor(m => m.UserInfoId, row.UserInfoId, new { @checked = "checked", @class = "mc_input" })
                                        @row.Name
                                        <span class="small-text">
                                            Guardian of
                                        </span>
                                        <span class="small-text">
                                            ssss
                                        </span>
                                        @if (row.Students != null)
                                        {
                                            <span class="small-text">
                                                Guardian of
                                            </span>

                                            foreach (var st in row.Students)
                                            {
                                                <span class="small-text">
                                                    @st
                                                </span>
                                            }
                                        }

                                    </p>
                                }*@


                        </div><!-- /mc_signup_submit -->
                        <div class="mc_merge_var">
                            @Html.LabelFor(model => model.Password)
                            <p>@Html.PasswordFor(m => m.Password, new { @class = "mc_input" })</p>
                        </div><!-- /mc_merge_var -->
                        <div class="mc_merge_var">
                            @Html.LabelFor(model => model.ConfirmPassword)
                            <p>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mc_input" })</p>
                        </div><!-- /mc_merge_var -->
                        <div class="mc_signup_submit">
                            <label>&nbsp;</label>
                            <input type="submit" class="button" value="Finish" id="mc_signup_submit" name="mc_signup_submit">
                        </div><!-- /mc_signup_submit -->
                        <div id="mc_message" class="updated">
                            <label>&nbsp;</label>
                            @Html.ValidationSummary()
                        </div><!-- /mc_message -->
                    </div>

                }
                </div>

            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
