                                    <li><a href="~/Employees/GetActiveEmployees">Staff</a></li>
                                    <li><a href="~/ScholarshipOfStudent/GetScholarshipOfStudent">Scholar Students</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Notice</a>
                                <ul class="sub-dropdown">
                                    <li>@Html.ActionLink("General", "GetAllWithGrid", "Notice", new { }, null)</li>
                                    <li><a href="~/Notice/ActiveTeacherNotice">Teacher</a></li>
                                    <li><a href="~/Notice/ActiveEmployeeNotice">Staff</a></li>
                                    <li><a href="~/Notice/ActiveStudentNotice">Student</a></li>
                                </ul>
                            </li>
                            <li>
                                @Html.ActionLink("News & Events", "GetAllWithGrid", "Event", new { }, null)
                            </li>
                            <li>
                                @Html.ActionLink("Gallery", "GetAllGallery", "Gallery", new { }, null)
                            </li>
                            <li>
                                <a href="#">Academy</a>
                                <ul class="sub-dropdown">
                                    <li><a href="~/AcademicCalender/AcademicCalender">Academy Calender</a></li>

                                    <li><a href="~/Result/Result">Result</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Admission</a>
                                <ul class="sub-dropdown">
                                    <li><a href="~/AdmissionForm/GetAdmissionInfo">Admission Info</a></li>

                                    <li><a href="~/AdmissionForm/Index">Online Admission</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="~/ContactUS/Create?IsSuccess=false">Contact Us</a>
