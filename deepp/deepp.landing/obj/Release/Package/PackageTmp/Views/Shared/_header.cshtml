<!-- Header Area Start -->
<header id="main-header">
    <div class="container">

        <div class="row">
            <div class="col-md-7">
                @*<a href="#" class="logo"><img src="~/assets/img/logo1.png" alt="logo"></a>*@
                <a href="~/home/Index" class="logo">
                    <img src="/image/GetImageById?id=@Sessions.InstituteBannerId&refCode=11" alt="logo">
                </a>
            </div>
            <div class="col-md-5">
                <div class="right-side">
                    <nav class="top-nav">
                        <ul id="menu-top-menu">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { }, null)</li>
