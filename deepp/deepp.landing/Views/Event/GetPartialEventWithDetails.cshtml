@model IEnumerable<deepp.Entities.Models.Event>
@foreach (var item in Model)
{


    <div class="list-event-item">
        <div class="box-content-inner clearfix">

            <div class="list-event-header">

                <div class="view-details lightBtn">
                    @Html.ActionLink("View Details", "Details", "Event", new { id = item.Id }, null)
                </div>
            </div>
            <h5 class="event-title">
                @Html.ActionLink(@item.EventTitle, "Details", "Event", new { id = item.Id }, null)
            </h5>

            @if (@item.EventBody.Length > 100)
            { <p>
                @item.EventBody.Substring(1, 100)....
            </p>

            }
            else
            {
                <p>   @item.EventBody;</p>
            }

        </div>
    </div>

}


