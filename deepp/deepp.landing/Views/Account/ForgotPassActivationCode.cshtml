@model deepp.landing.Models.RegisterActivationCodeViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h2 class="page-title">Forgot Password</h2>
            </div> <!-- /.col-md-6 -->
            @*<div class="col-md-6 col-sm-6 hidden-xs back-home">
                @Html.ActionLink("← Go back Home", "Index", "Home", new { }, null)
            </div>*@
        </div> <!-- /.row -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box-content">
                <div class="col-md-6">
                    <h3 class="widget-title">Step - 2 of 3</h3>
                    <div class="contact-form clearfix">
                        @using (Html.BeginForm("ForgotPassActivationCode", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                   {
                        <div id="mc_subheader">
                            <p>Enter authentication code which you received on your mobile through SMS</p>
                        </div><!-- /mc_subheader -->
                        <div class="contactForm">
                            <div class="mc_merge_var">
                                @Html.LabelFor(model => model.AuthenticationCode)
                                <p>@Html.TextBoxFor(m => m.AuthenticationCode, new { @class = "mc_input" })</p>
                            </div><!-- /mc_merge_var -->
                            <div class="mc_merge_var">
                                <label>&nbsp;</label>
                                <span class="small-text">Wait for 1 minute. If you do not get any sms please <a href="#" id="codeResend">click here</a></span>
                            </div><!-- /mc_signup_submit -->
                            <div class="mc_signup_submit">
                                <label>&nbsp;</label>
                                <input type="submit" class="button" value="Next" id="mc_signup_submit" name="mc_signup_submit">
                            </div><!-- /mc_signup_submit -->
                            <div id="mc_message" class="updated">
                                <label>&nbsp;</label>
                                @Html.ValidationSummary()
                            </div><!-- /mc_message -->
                        </div>
                    }
                    </div>
                </div> <!-- /.col-md-7 -->
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#codeResend").click(function () {
            $.ajax({
                cache: false,
                async: true,
                url: 'RequestForCode',
                contentType: 'application/json;charset=utf-8',
                success: function (result) {
                    alert(result.msg);
                }
            })
        });
    </script>
}
