                }



            </ul>
            <!-- END SIDEBAR MENU -->
        </nav>

        <div id="page-content">
            <div id="wrap">
                <div id="page-heading">
                    <ol class="breadcrumb">

                        @RenderSection("breadcrumb", required: false)
                    </ol>

                    <h2>
                        @RenderSection("title", required: false)
                    @if (Sessions.UserInfoTypeId.ToString()== "15")

                    {   <b>@Sessions.GlobalPlaceName.ToString() </b>
                    }
                </h2>
                <div class="options">
                    <div class="btn-toolbar">

                    </div>
                </div>
            </div>
            <div class="container">
                <script src="~/Content/bootstrap/js/jquery.bootstrap-touchspin.min.js"></script>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @*@Scripts.Render("~/bundles/datePicker")
                @Styles.Render("~/Content/datepicker")*@
                @RenderBody()
            </div> <!-- container -->
        </div> <!--wrap -->
    </div>

</div>

@Html.Partial("_footer")

    @RenderSection("scripts", required: false)

</body>
</html>
