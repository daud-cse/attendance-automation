                        <li><a href="~/Teacher/GetHeadMasterList"><i class="fa fa-th"></i> <span>Head Master List</span></a></li>
                        <li><a href="~/SendmailOrSms/Index"><i class="fa fa-th"></i> <span>Send sms or mail</span></a></li>
                    }
                }
                else
                {
                    <li class="active" id="liDashBoard"><a href="~/Home/index"><i class="fa fa-home"></i> <span>Dashboard</span></a></li>
                    <li><a href="~/Student/index?studentId=@Sessions.UserId"><i class="fa fa-th"></i> <span>Profile</span></a></li>
                    <li><a href="~/Payment/index?studentId=@Sessions.UserId"><i class="fa fa-th"></i> <span>Payments</span></a></li>
                    <li><a href="~/Notice/Index"><i class="fa fa-th"></i> <span>Notice</span></a></li>
                    <li><a href="~/Event/Index"><i class="fa fa-th"></i> <span>Event</span></a></li>
                    <li><a href="~/StudentResult/Index"><i class=" fa fa-male"></i> <span>Result</span></a></li>
